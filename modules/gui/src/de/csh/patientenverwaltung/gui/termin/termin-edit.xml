<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://editCaption"
        class="de.csh.patientenverwaltung.gui.termin.TerminEdit"
        datasource="terminDs"
        focusComponent="fieldGroup"
        messagesPack="de.csh.patientenverwaltung.gui.termin">
    <dsContext>
        <datasource id="terminDs"
                    class="de.csh.patientenverwaltung.entity.Termin"
                    view="termin-view"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="terminDs">
            <column>
                <field id="zeitpunkt"
                       width="250px"/>
                <field id="patient"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"/>
    </layout>
</window>
