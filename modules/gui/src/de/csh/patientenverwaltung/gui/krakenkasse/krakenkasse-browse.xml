<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://browseCaption"
        class="de.csh.patientenverwaltung.gui.krakenkasse.KrakenkasseBrowse"
        focusComponent="krakenkassesTable"
        lookupComponent="krakenkassesTable"
        messagesPack="de.csh.patientenverwaltung.gui.krakenkasse">
    <dsContext>
        <collectionDatasource id="krakenkassesDs"
                              class="de.csh.patientenverwaltung.entity.Krakenkasse"
                              view="_local">
            <query>
                <![CDATA[select e from pa$Krakenkasse e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="krakenkassesTable"
            spacing="true">
        <filter id="filter"
                datasource="krakenkassesDs">
            <properties include=".*"/>
        </filter>
        <table id="krakenkassesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="anschrift"/>
                <column id="plz"/>
                <column id="ort"/>
                <column id="telefon"/>
                <column id="fax"/>
                <column id="email"/>
            </columns>
            <rows datasource="krakenkassesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="krakenkassesTable.create"/>
                <button id="editBtn"
                        action="krakenkassesTable.edit"/>
                <button id="removeBtn"
                        action="krakenkassesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
