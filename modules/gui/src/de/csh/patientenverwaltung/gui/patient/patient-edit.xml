<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://editCaption"
        class="de.csh.patientenverwaltung.gui.patient.PatientEdit"
        datasource="patientDs"
        focusComponent="fieldGroup"
        messagesPack="de.csh.patientenverwaltung.gui.patient">
    <dsContext>
        <datasource id="patientDs"
                    class="de.csh.patientenverwaltung.entity.Patient"
                    view="patient-view">
            <collectionDatasource id="voruntersuchungstermineDs"
                                  property="voruntersuchungstermine"/>
        </datasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <hbox spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="patientDs">
                <column width="250px">
                    <field id="name"
                           width="250px"/>
                    <field id="vorname"
                           width="250px"/>
                    <field id="geburtsdatum"
                           width="250px"/>
                    <field id="anschrift"
                           width="250px"/>
                    <field id="plz"
                           width="250px"/>
                    <field id="ort"
                           width="250px"/>
                    <field id="geschlecht"
                           width="250px"/>
                </column>
            </fieldGroup>
            <vbox spacing="true"
                  width="250px">
                <button id="patientenakteDruckenButton"
                        caption="Patientenakte drucken"
                        icon="icons/reports-print.png"
                        width="100%"/>
                <button id="termineinladungDruckenButton"
                        action="voruntersuchungstermineTable.termineinladungDrucken"
                        icon="icons/reports-print.png"
                        width="100%"/>
            </vbox>
        </hbox>
        <tabSheet id="oneToManyTabs"
                  height="200px"
                  width="40%">
            <tab id="vorunterschungstermineTab"
                 caption="Voruntersuchungstermine"
                 margin="true"
                 spacing="true">
                <table id="voruntersuchungstermineTable"
                       height="100%"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="termineinladungDrucken"
                                trackSelection="true"
                                invoke="termineinladungDruckenAction"
                                caption="Termineinladung drucken"
                                />
                    </actions>
                    <columns>
                        <column id="zeitpunkt"/>
                    </columns>
                    <rows datasource="voruntersuchungstermineDs"/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="voruntersuchungstermineTable.create"/>
                        <button id="editBtn"
                                action="voruntersuchungstermineTable.edit"/>
                        <button id="removeBtn"
                                action="voruntersuchungstermineTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
        <iframe id="windowActions"
                screen="editWindowActions"/>
    </layout>
</window>
